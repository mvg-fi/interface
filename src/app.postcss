/* Write your global styles here, in PostCSS syntax */
@tailwind base;
@tailwind components;
@tailwind utilities;

@layer components {
  .btn{
    text-transform: none;
    transform: none !important;
    transition-property: none;
    transition-duration: 0ms;
    transition-timing-function: unset !important;
  }
  .btn:active:hover,
  .btn:active:focus {
    animation: none;
    transform: none !important;
  }
}